<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#000000" /> <!-- Schwarzer Hintergrund wenn gedrückt -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#000000" /> <!-- Schwarzer Hintergrund wenn fokussiert -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#000000" /> <!-- Weißer Hintergrund im normalen Zustand -->
        </shape>
    </item>
</selector>
